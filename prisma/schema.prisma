generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ItemStatus {
  ACTIVE
  ORDERED
  ARCHIVED
  DONATED
  SOLD
  NEEDS_REPAIR
  NEEDS_CLEANING
  BEING_ALTERED
  STORED
}

enum Season {
  SPRING
  SUMMER
  FALL
  WINTER
  ALL_SEASON
}

enum OccasionType {
  CASUAL
  SMART_CASUAL
  BUSINESS_CASUAL
  BUSINESS_FORMAL
  BLACK_TIE
  DATE_NIGHT
  CHURCH
  TRAVEL
  OUTDOOR
  ATHLETIC
  OTHER
}

enum SupplyStatus {
  IN_STOCK
  LOW_STOCK
  OUT_OF_STOCK
  ORDERED
  DISCONTINUED
}

enum SupplyCategory {
  POLISH
  BRUSH
  TREE
  CLEANER
  PROTECTION
  CLOTH
  TOOL
  LACES
  KIT
  OTHER
}

enum SupplyUse {
  CLEANING
  CONDITIONING
  POLISHING
  APPLICATION
  GENERAL
}

enum BuffOrder {
  INITIAL
  FINAL
  EITHER
}

model Person {
  id           String   @id @default(cuid())
  clerkUserId  String   @unique
  name         String
  email        String?
  measurements Json?
  preferences  Json?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Onboarding
  hasCompletedOnboarding Boolean   @default(false)
  onboardingCompletedAt  DateTime?

  // Track when supplies were last modified for cache invalidation
  suppliesLastModified DateTime @default(now())

  // Subscription
  subscriptionTier     String    @default("free")  // "free" | "pro"
  stripeCustomerId     String?   @unique
  stripeSubscriptionId String?   @unique
  subscriptionStatus   String    @default("inactive") // "active" | "canceled" | "past_due" | "inactive"
  subscriptionEndDate  DateTime?

  // Usage tracking
  shoeCareUsageThisMonth Int      @default(0)
  usageResetDate         DateTime @default(now())

  wardrobeItems          WardrobeItem[]
  outfits                Outfit[]
  chatSessions           ChatSession[]
  careSupplies           CareSupply[]
  careInstructionsCache  CareInstructionsCache[]
}

model WardrobeItem {
  id               String     @id @default(cuid())
  personId         String
  person           Person     @relation(fields: [personId], references: [id], onDelete: Cascade)

  photoUrls        String[]
  thumbnailUrl     String?

  name             String?    // User-defined name to distinguish similar items (e.g., "Work pants", "Sunday shoes")

  category         String
  subcategory      String?

  colorPrimary     String
  colorSecondary   String?
  pattern          String?

  brand            String?
  material         String?

  formalityLevel   Int        @default(3)
  construction     String?
  seasonSuitability Season[]  @default([ALL_SEASON])
  weatherRestrictions String?
  status           ItemStatus @default(ACTIVE)

  size             String?
  fit              String?
  notes            String?

  purchaseDate     DateTime?
  purchasePrice    Decimal?   @db.Decimal(10, 2)
  purchaseSource   String?

  timesWorn        Int        @default(0)
  lastWorn         DateTime?

  aiAnalysis       Json?

  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt

  outfitItems           OutfitItem[]
  supplyLinks           ShoeSupplyLink[]
  careInstructionsCache CareInstructionsCache[]

  @@index([personId])
  @@index([category])
  @@index([status])
  @@index([formalityLevel])
}

model Outfit {
  id             String       @id @default(cuid())
  personId       String
  person         Person       @relation(fields: [personId], references: [id], onDelete: Cascade)

  name           String
  occasionType   OccasionType @default(OTHER)
  description    String?

  formalityScore Int?
  seasons        Season[]     @default([ALL_SEASON])

  photoUrl       String?

  notes          String?
  rating         Int?
  timesWorn      Int          @default(0)
  lastWorn       DateTime?

  createdBy      String       @default("manual")
  aiReasoning    String?

  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  items          OutfitItem[]

  @@index([personId])
  @@index([occasionType])
}

model OutfitItem {
  id             String       @id @default(cuid())
  outfitId       String
  outfit         Outfit       @relation(fields: [outfitId], references: [id], onDelete: Cascade)
  wardrobeItemId String
  wardrobeItem   WardrobeItem @relation(fields: [wardrobeItemId], references: [id], onDelete: Cascade)

  position       Int          @default(0)

  @@unique([outfitId, wardrobeItemId])
  @@index([outfitId])
  @@index([wardrobeItemId])
}

model ChatSession {
  id        String        @id @default(cuid())
  personId  String
  person    Person        @relation(fields: [personId], references: [id], onDelete: Cascade)

  title     String?
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  messages  ChatMessage[]

  @@index([personId])
}

model ChatMessage {
  id                 String      @id @default(cuid())
  sessionId          String
  session            ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  role               String
  content            String      @db.Text

  suggestedOutfitIds String[]
  suggestedOutfit    Json?       // Full outfit suggestion data for reconstruction

  createdAt          DateTime    @default(now())

  @@index([sessionId])
}

model Trip {
  id              String         @id @default(cuid())
  personId        String
  name            String
  destination     String
  startDate       DateTime
  endDate         DateTime
  weatherForecast Json?
  notes           String?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  occasions       TripOccasion[]
  packingList     PackingList?

  @@index([personId])
}

model TripOccasion {
  id           String       @id @default(cuid())
  tripId       String
  trip         Trip         @relation(fields: [tripId], references: [id], onDelete: Cascade)

  date         DateTime
  description  String
  occasionType OccasionType @default(OTHER)

  outfitId     String?

  @@index([tripId])
}

model PackingList {
  id              String   @id @default(cuid())
  tripId          String   @unique
  trip            Trip     @relation(fields: [tripId], references: [id], onDelete: Cascade)

  wearOnTravelDay String[]
  toPack          String[]
  packed          String[]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model CareSupply {
  id                  String         @id @default(cuid())
  personId            String
  person              Person         @relation(fields: [personId], references: [id], onDelete: Cascade)

  photoUrls           String[]
  name                String
  category            SupplyCategory
  subcategory         String?
  intendedUse         SupplyUse?
  buffOrder           BuffOrder?
  brand               String?
  color               String?
  size                String?

  compatibleColors    String[]
  compatibleMaterials String[]

  status              SupplyStatus   @default(IN_STOCK)
  quantity            Int            @default(1)
  quantityUnit        String?
  reorderThreshold    Int?

  purchaseDate        DateTime?
  purchasePrice       Decimal?       @db.Decimal(10, 2)
  purchaseSource      String?
  reorderUrl          String?
  rating              Int?           // 1-5 star rating

  lastUsed            DateTime?
  timesUsed           Int            @default(0)
  notes               String?

  // Kit relationship - items can belong to a parent kit
  parentKitId         String?
  parentKit           CareSupply?    @relation("KitItems", fields: [parentKitId], references: [id], onDelete: SetNull)
  kitItems            CareSupply[]   @relation("KitItems")

  createdAt           DateTime       @default(now())
  updatedAt           DateTime       @updatedAt

  shoeLinks           ShoeSupplyLink[]

  @@index([personId])
  @@index([category])
  @@index([status])
  @@index([parentKitId])
}

model ShoeSupplyLink {
  id             String       @id @default(cuid())
  careSupplyId   String
  careSupply     CareSupply   @relation(fields: [careSupplyId], references: [id], onDelete: Cascade)
  wardrobeItemId String
  wardrobeItem   WardrobeItem @relation(fields: [wardrobeItemId], references: [id], onDelete: Cascade)

  isPrimary      Boolean      @default(false)
  notes          String?

  createdAt      DateTime     @default(now())

  @@unique([careSupplyId, wardrobeItemId])
  @@index([careSupplyId])
  @@index([wardrobeItemId])
}

model CareInstructionsCache {
  id               String       @id @default(cuid())
  personId         String
  person           Person       @relation(fields: [personId], references: [id], onDelete: Cascade)
  wardrobeItemId   String
  wardrobeItem     WardrobeItem @relation(fields: [wardrobeItemId], references: [id], onDelete: Cascade)

  careType         String       // full_polish, quick_clean, deep_condition
  instructions     Json         // Cached CareInstructions object
  suppliesModifiedAt DateTime   // When supplies were last modified at cache time

  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt

  @@unique([wardrobeItemId, careType])
  @@index([personId])
  @@index([wardrobeItemId])
}
